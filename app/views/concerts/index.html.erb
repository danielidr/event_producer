<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Concert date</th>
      <th>Duration</th>
      <th>Audience</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.name %></td>
        <td><%= concert.concert_date %></td>
        <td><%= concert.duration %></td>
        <td><%= concert.audience %></td>
        <td><%= concert.group %></td>
        <td><%= link_to 'Show', concert, class: 'btn btn-dark btn-sm text-light' %></td>
        <td><%= link_to 'Edit', edit_concert_path(concert), class: 'btn btn-dark btn-sm text-light' %></td>
        <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-dark btn-sm text-light' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

