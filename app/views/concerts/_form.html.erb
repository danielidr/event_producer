<%= form_with(model: concert, local: true) do |form| %>
  <% if concert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(concert.errors.count, "error") %> prohibited this concert from being saved:</h2>

      <ul>
      <% concert.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="form-group col-2">
        <%= form.label :group %>
        <%= form.collection_select :group_id, @groups, :id, :name, prompt: "Select group", class: "form-control"%>
      </div>
      <div class="form-group col-3">
        <%= form.label :concert_date %>
        <%= form.date_select :concert_date, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-5">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group col-3">
        <%= form.label :duration %>
        <%= form.number_field :duration, class: "form-control" %>
      </div>
    
      <div class="form-group col-3">
        <%= form.label :audience %>
        <%= form.number_field :audience, class: "form-control" %>
      </div>
    </div>
    
    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
  

  


<% end %>
